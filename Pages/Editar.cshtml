@page "{id:int?}"
@model Appsx.Pages.EditarModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Edição do contato -@Model.Contato.Id</h1>
<form method="post">
    <div asp-validation-summary="All"> </div>
    <input asp-for="Contato.Id" type="hidden" />
    <div>
        <label asp-for="Contato.Nome"></label>
        <div>
            <input asp-for="Contato.Nome"/>
            <span asp-validation-for="Contato.Nome"></span>
        </div>
    </div>
    <div>
        <button type="submit">Salvar</button>
    </div>
</form>